<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Pokedex</title>
</head>
<body>

    <header>
        <h1>Pokedex</h1>
    </header>

    <main>
        <section id="cadastro">

            <img src="/img/pokedex.png" alt="Pokedex">
            <div>

                <% if (pokemon==undefined) { %>
                    <h2>Cadastre um novo pokemon</h2>
        
                    <form action="/add" method="POST">
        
                        <label for="nome">Nome:</label>
                        <input type="text" id="nome" name="nome">
        
                        <label for="imagem">Link da imagem:</label>
                        <input type="text" id="imagem" name="imagem">
        
                        <label for="tipo">Tipo:</label>
                        <input type="text" id="tipo" name="tipo">
        
                        <button id="btnCadastrar" type="submit">Cadastrar</button>
        
                    </form>
                    <%}  else {%>
        
                        <h2>Atualize os dados do Pokemon</h2>
                    <form action="/update/<%= pokemon.numero %>" method="POST">
        
                        <label for="nome">Nome:</label>
                        <input type="text" id="nome" name="nome" value="<%= pokemon.nome%>">
        
                        <label for="imagem">Link da imagem:</label>
                        <input type="text" id="imagem" name="imagem" value="<%= pokemon.imagem%>">
        
                        <label for="tipo">Tipo:</label>
                        <input type="text" id="tipo" name="tipo" value="<%= pokemon.tipo%>">
        
                        <button id="btnAtualizar" type="submit">Atualizar</button>
                        </form>
                        <%}%>
                </section>
        
                <section id="card">
        
                        <h2>Lista de Pokemons</h2>
                    <% pokedex.forEach((pokemon) =>{ %>
                        <div class="card">
                        <img src="<%= pokemon.imagem %>" alt="">
                        <h3> <%= pokemon.nome%></h3>
                        <p><%= pokemon.tipo%></p>
                        <a href="/detalhes/<%= pokemon.numero%>">Editar</a>
                        </div>
                    <%  })  %>
                </section>
            </div>

            
           

  
    </main>
    
    

</body>
</html>